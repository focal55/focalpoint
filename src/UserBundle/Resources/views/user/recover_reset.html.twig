{% extends 'base_bare.html.twig' %}

{% block body %}

    <div class="row sub-header">
        <div class="col-md-4 offset-md-4 col-sm-6 offset-sm-3 col-xs-10 offset-xs-1 text-xs-center">
            Create an Account
        </div>
    </div>

    <div class="row">
        <div class="col-md-4 offset-md-4 col-sm-6 offset-sm-3 col-xs-10 offset-xs-1">
            <div class="card card-block">

                {{ form_start(form) }}

                {% if not form.vars.valid %}
                    <div class="alert alert-warning">
                        {{ form_errors(form) }}
                    </div>
                {% endif %}
                  {{ form_row(form.plainPassword.first, {'label': 'Password'}) }}
                  {{ form_row(form.plainPassword.second, {'label': 'Repeat Password'}) }}
                  <button type="submit" class="btn btn-primary" formnovalidate>Reset Password</button>
                {{ form_end(form) }}

            </div>
            <div class="card card-block text-md-center sub-card">
                Already know your password? <a href="{{ path('security_login') }}">Sign in.</a>
            </div>
        </div>
    </div>
{% endblock %}
