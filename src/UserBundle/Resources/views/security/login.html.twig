{% extends 'base_bare.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .field-password a {
            font-size: .85rem;
        }
    </style>
{% endblock %}

{% block body %}

    <div class="row sub-header">
        <div class="col-md-4 offset-md-4 col-sm-6 offset-sm-3 col-xs-10 offset-xs-1 text-xs-center">
            Sign in to Thinkbean
        </div>
    </div>

    <div class="row">
        <div class="col-md-4 offset-md-4 col-sm-6 offset-sm-3 col-xs-10 offset-xs-1">
            <div class="card card-block">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {{ form_start(form) }}
                <div class="form-group field-username">
                    {{ form_label(form._username) }}
                    {{ form_widget(form._username, {'attr': {'tabindex': 1}}) }}
                </div>
                <div class="form-group field-password">
                    <a class="pull-right" href="{{ path('user_recover') }}">Forgot password?</a>
                    {{ form_label(form._password) }}
                    {{ form_widget(form._password, {'attr': {'tabindex': 2}}) }}
                </div>

                <button type="submit" class="btn btn-block btn-success" tabindex="3">Sign in</button>
                {{ form_end(form) }}
            </div>

            <div class="card card-block text-md-center sub-card">
                New to Thinkbean? <a href="{{ path('user_register') }}">Create an account.</a>
            </div>

        </div>
    </div>

{% endblock %}
