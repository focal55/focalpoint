{% extends 'layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <style>

    </style>
{% endblock %}

{% block sidebar %}
    <div class="dropdown-divider"></div>
    <div class="nav-sidebar list-group">

        <a href="{{ path('event_edit', {'id': event.id, 'timestamp': timestamp}) }}"
           class="list-group-item list-group-item-action{% if app.request.attributes.get('_route') starts with 'classes' %} active{% endif %}">
            <i class="fa fa-rocket" aria-hidden="true"></i>
            <span class="hidden-sm-down">Edit Event</span>
        </a>

    </div>
    {{ parent() }}
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                {{ dump(event) }}
                {{ dump(modification) }}
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                <a class="btn btn-success" href="{{ path('event_reservation', {'id': event.id, 'timestamp': timestamp}) }}">Reserve Your Spot!</a>
            </div>
        </div>
    </div>
{% endblock %}
