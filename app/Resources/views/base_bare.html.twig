<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>{% block title %}Thinkbean{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('vendor/font-awesome/css/font-awesome.min.css') }}">
        <link rel="stylesheet" href="{{ asset('vendor/bootstrap/dist/css/bootstrap.min.css') }}">
        <link rel="stylesheet" href="{{ asset('vendor/jquery-ui/themes/base/jquery-ui.min.css') }}">
        <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
</head>
<body class="bare">

    <div class="row header">
        <div class="col-md-4 offset-md-4 text-xs-center">
            <a href="{{ path('homepage') }}"><img class="logo-icon" src="{{ asset('images/logo.png') }}"></a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4 offset-md-4 col-sm-6 offset-sm-3 col-xs-10 offset-xs-1">
            {% for type, flashMessages in app.session.flashbag.all() %}
                {% for flashMessage in flashMessages %}
                    <div class="row">
                        <div class="col-md-12">
                            <div class="alert alert-{{ type }} alert-dismissible" role="alert">
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                                {{ flashMessage|trans }}
                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% endfor %}
        </div>
    </div>

    {% block body %}{% endblock %}

    <footer>
        <div class="col-md-4 offset-md-4 text-xs-center">
            <a class="small" href="#">Terms</a>
            <a class="small" href="#">Privacy</a>
            <a class="small" href="#">Security</a>
            <a class="small" href="#">Contact</a>
        </div>
    </footer>

    {% block javascripts %}
        <script src="{{ asset('vendor/jquery/dist/jquery.min.js') }}"></script>
        <script src="{{ asset('vendor/jquery-ui/jquery-ui.min.js') }}"></script>
        <script src="{{ asset('vendor/tether/dist/js/tether.min.js') }}"></script>
        <script src="{{ asset('vendor/bootstrap/dist/js/bootstrap.min.js') }}"></script>
        <script src="{{ asset('vendor/pugxautocompleter/autocompleter-jqueryui.js') }}"></script>
    {% endblock %}

</body>
</html>
